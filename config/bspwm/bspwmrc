#!/usr/bin/env dash

if (xrandr | grep "HDMI1 connected"); then
	bspc monitor HDMI1 -d 1 2 3 4 5 6 7 8 9 0
else
	bspc monitor LVDS1 -d 1 2 3 4 5 6 7 8 9 0
fi

bspc config split_ratio         0.52

bspc config -m LVDS1 border_width        3
bspc config -m LVDS1 window_gap          5
bspc config -m LVDS1 borderless_monocle  true
bspc config -m LVDS1 gapless_monocle     true
bspc config -m LVDS1 single_monocle true
bspc config -m LVDS1 normal_border_color "#334046"
bspc config -m LVDS1 focused_border_color "#666141"

nohup sxhkd & disown
