#! /bin/dash

bspc monitor -d 01 02 03 04 05 06 07 08 09 00

bspc rule -a Pidgin -d ^4
bspc rule -a Chromium -d ^2

bspc config split_ratio         0.52
bspc config -m LVDS1 border_width        5
bspc config -m LVDS1 window_gap          10
bspc config -m LVDS1 borderless_monocle  true
bspc config -m LVDS1 gapless_monocle     true
bspc config -m LVDS1 normal_border_color "#435056"
bspc config -m LVDS1 focused_border_color "#637076"
bspc config -m LVDS1 top_padding 25
sxhkd &
$HOME/.config/bspwm/panel &
