#! /bin/sh

bspc monitor -d 01 02 03 04 05 06 07 08 09 00

bspc rule -a Pidgin -d ^4
bspc rule -a Chromium -d ^2

bspc config split_ratio         0.52
bspc config border_width        2
bspc config window_gap          0
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config normal_border_color "#262626"
bspc config focused_border_color "#5f819d"
xsetroot -solid "#262626"
bspc config top_padding 25
setxkbmap -layout us -variant altgr-intl nodeadkeys
xmodmap $HOME/.Xmodmap
hidcur &
sxhkd &
numlockx
# compton -b
$HOME/.config/bspwm/panel &
xsetroot -cursor_name left_ptr
# imlibsetroot -t $HOME/.config/bspwm/stripe.png
