#! /bin/sh

bspc monitor -d I II III IV V VI VII VIII XI X

bspc rule -a Pidgin -d ^4
bspc rule -a Chromium -d ^2

bspc config split_ratio         0.52
bspc config border_width        2
bspc config window_gap          8
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config normal_border_color "#666666"
bspc config focused_border_color "#859900"
xsetroot -solid "#3c3c3c"
bspc config top_padding 22
setxkbmap us
xmodmap $HOME/.Xmodmap
$HOME/.config/bspwm/panel &
sxhkd &
