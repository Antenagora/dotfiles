#! /bin/sh

bspc monitor -d 01 02 03 04 05 06 07 08 09 00

bspc rule -a Pidgin -d ^4
bspc rule -a Chromium -d ^2

bspc config split_ratio         0.52
bspc config border_width        5
bspc config window_gap          10
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config normal_border_color "#334046"
bspc config focused_border_color "#738086"
xsetroot -solid "#435056"
bspc config top_padding 25
setxkbmap us
xmodmap $HOME/.Xmodmap
hidcur &
$HOME/.config/bspwm/panel &
sh $HOME/.fehbg
sxhkd &
xsetroot -cursor_name left_ptr
